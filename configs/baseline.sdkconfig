# Baseline SDK config (power optimizations OFF)
# Copy this to `sdkconfig` before building: copy configs\baseline.sdkconfig sdkconfig

CONFIG_ECOWATT_DEVICE_ID="EcoWatt-Dev-01-baseline"
CONFIG_ECOWATT_ENABLE_AUTO_LIGHT_SLEEP=n
CONFIG_ECOWATT_MANUAL_LIGHT_SLEEP=n
CONFIG_ECOWATT_WIFI_GATE_BETWEEN_UPLOADS=n
CONFIG_ECOWATT_UPLOAD_INTERVAL_SEC=15
CONFIG_ECOWATT_SAMPLE_PERIOD_MS=5000
CONFIG_ECOWATT_WIFI_PS_MODE=1

# Energy estimation defaults (can be left unchanged)
CONFIG_ECOWATT_POWER_V_SUPPLY=5000
CONFIG_ECOWATT_POWER_I_ACTIVE_MA=200
CONFIG_ECOWATT_POWER_I_UPLINK_MA=300
CONFIG_ECOWATT_POWER_I_SLEEP_MA=5
